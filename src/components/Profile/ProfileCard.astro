---
import { profile } from "../../data/profileData";
import ProfileImage from "../../components/Profile/ProfileImage.astro";
import ProfileInfo from "../../components/Profile/ProfileInfo.astro";
import ProfileActions from "../../components/Profile/ProfileActions.astro";
import "../../styles/profile.css";
---

<div class="profile-container">
  <div class="profile-card">
    <img class="banner" src={profile.bannerImage} alt="Banner" />
    <div class="profile-content">
      <ProfileImage />
      <ProfileInfo />
      <ProfileActions />
    </div>
  </div>
</div>
